{% extends 'admin/adminbase.html.twig' %}

{% block body %}

        <div class="container-fluid ">
                <div class="row no-gutters">
                       <div class="col-12 text-center">
                       <h1 >{{title}}</h1>
                       {% if catList is empty %}
                        <h1>For beginner you need to create a category</h1>
                        <a href="{{ path('CategoryCreate') }}" class="btn btn-success">Click here ! </a>
                        {% else %}
                        <a href="{{
                                path('PublicationCreate')
                        }}" class="btn btn-outline-success">Create Post</a> 
                        {% endif %}
                       {% for messege in app.flashes('success') %}
                        <div class="container">

                                
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <strong>{{ messege }}</strong> 
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                        </button>
                                </div>
                                        
                        </div>
                        {% endfor %}      
                        
                       
                       
                       </div> 
                        <div class="col-12 col-lg-6 col-md-6">
                         <h2>Pubications list: </h2>
                                <ul>
                        {% for post in posts %}
                                <li> {{post.title}} | {{post.content}} </li><a href="{{ path("PublicationUpdate",{'id' : post.id }) }}"> Update </a>
                        {% endfor %}
                        </ul>
                        </div>

                </div>
        </div>
        
    
{% endblock %}